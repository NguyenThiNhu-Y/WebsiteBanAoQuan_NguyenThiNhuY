@using PagedList.Mvc
@model PagedList.IPagedList<ModelEF.tblUserAccount>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    <i class="fa fa-user">Quản lí người dùng</i>
}

@using (Html.BeginForm("Index", "User", FormMethod.Get))
{
    <div class="col-lg-12 form-group">
        <div class="col-md-4">
            <input type="text" value="@ViewBag.SearchString" name="searchString" placeholder="Nhập từ khóa cần tìm" class="form-control" />
        </div>
        <div class="col-md-2">
            <input type="submit" value="Tìm kiếm" class="btn btn-default" />
        </div>
    </div>
}
<div class="col-lg-12 form-group">

    <table class="table">
        <tr>
            <th>
                TÀI KHOẢN
            </th>
            <th>
                MẬT KHẨU
            </th>
            <th>
                TRẠNG THÁI
            </th>
            <th>THAO TÁC</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr id="row_@item.id">
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.status)
                </td>
                <td>
                    @if (item.status == "blocked")
                    {
                        @Ajax.ActionLink(" ", "Delete", new { @id = item.id }, new AjaxOptions
               {
                   Confirm = "Bạn có muốn xóa bản ghi này",
                   OnComplete = "$('#row_" + item.id + "').remove()",
                   HttpMethod = "Delete"
               }, new { @class = "glyphicon glyphicon-trash" })
                    }

                </td>
            </tr>
        }

    </table>

</div>

@Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = ViewBag.SearchString }))
