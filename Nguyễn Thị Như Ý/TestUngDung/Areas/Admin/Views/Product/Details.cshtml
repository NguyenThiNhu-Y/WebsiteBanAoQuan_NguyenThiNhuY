@model ModelEF.tblProduct

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    <i class="fa fa-user">Chi tiết sản phẩm</i>
}
<style>
    .form-control[disabled], .form-control[readonly], fieldset[disabled] .form-control {
        cursor: not-allowed;
        background-color: #fff;
        opacity: 1;
        color : #32323A;
    }
</style>
<div>
    <hr />
    <div class="col-lg-12 form-group"  >
        <div class="form-group">
            @Html.LabelFor(model => model.tblCategory.name, htmlAttributes: new { @class = "control-label col-md-2" })
