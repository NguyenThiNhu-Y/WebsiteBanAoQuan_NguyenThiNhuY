@model IEnumerable<ModelEF.tblProduct>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Client/Views/Shared/_Layout.cshtml";
}
<style>
    .productinfo img {
        width: 100%;
        height: 250px;
    }
</style>
<div class="col-sm-9 padding-right">
    <div class="features_items">
        <!--features_items-->
        <h2 class="title text-center">Features Items</h2>
        @foreach (var item in Model)
        {
            <div class="col-sm-4">
                <div class="product-image-wrapper">
                    <div class="single-products">
                        <div class="productinfo text-center">
                            <img src="~/uploadedImages/@item.image" alt="" />
                            <h2>@String.Format("{0:0,0 VNĐ}", (item.UnitCost))</h2>
                            <p>@item.Name</p>
                        </div>
                        <div class="product-overlay">
                            <div class="overlay-content">
                                <h2>@String.Format("{0:0,0 VNĐ}", (item.UnitCost))</h2>
                                <p>@item.Name</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div><!--features_items-->

    <div class="category-tab">
        <!--category-tab-->
     
            <div class="col-sm-12">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#tshirt" data-toggle="tab">Áo</a></li>
                    <li><a href="#blazers" data-toggle="tab">Quần</a></li>

                </ul>
            </div>
            <div class="tab-content">
                <div class="tab-pane fade active in" id="tshirt">
                    @foreach (var item in Model)
                    {

                        if (item.idCategoryNo == "LO001")
                        {

                            <div class="col-sm-3">
                                <div class="product-image-wrapper">
                                    <div class="single-products">
                                        <div class="productinfo text-center">
                                            <img src="~/uploadedImages/@item.image" alt=""  />
                                            <h2>
                                                @String.Format("{0:0,0 VNĐ}", (item.UnitCost))
                                            </h2>
                                            <p>@item.Name</p>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        }

                    }
                </div>

                <div class="tab-pane fade" id="blazers">
                    @foreach (var item in Model)
                    {
                        if (item.idCategoryNo == "LO002")
                        {

                            <div class="col-sm-3">
                                <div class="product-image-wrapper">
                                    <div class="single-products">
                                        <div class="productinfo text-center">
                                            <img src="~/uploadedImages/@item.image" alt="" />
                                            <h2>@String.Format("{0:0,0 VNĐ}", (item.UnitCost))</h2>
                                            <p>@item.Name</p>
                                            <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
                </div>
        </div><!--/category-tab-->

        <div class="recommended_items">
            <!--recommended_items-->
            <h2 class="title text-center">recommended items</h2>

            <div id="recommended-item-carousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="item active">
                        @{ var i = 1;}
                        @foreach (var item in Model)
                        {
                            if (i <= 3)
                            {
                                <div class="col-sm-4">
                                    <div class="product-image-wrapper">
                                        <div class="single-products">
                                            <div class="productinfo text-center">
                                                <img src="~/uploadedImages/@item.image" alt="" />
                                                <h2>@String.Format("{0:0,0 VNĐ}", (item.UnitCost))</h2>
                                                <p>@item.Name</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            i++;
                        }
                    </div>
                    @{ var d = 1;}
                    <div class="item">
                        @foreach (var item in Model)
                        {

                            if (d > 3 && d <= 6)
                            {
                                <div class="col-sm-4">
                                    <div class="product-image-wrapper">
                                        <div class="single-products">
                                            <div class="productinfo text-center">
                                                <img src="~/uploadedImages/@item.image" alt="" />
                                                <h2>@String.Format("{0:0,0 VNĐ}", (item.UnitCost))</h2>
                                                <p>@item.Name</p>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            }
                            d++;
                        }


                    </div>
                </div>
                <a class="left recommended-item-control" href="#recommended-item-carousel" data-slide="prev">
                    <i class="fa fa-angle-left"></i>
                </a>
                <a class="right recommended-item-control" href="#recommended-item-carousel" data-slide="next">
                    <i class="fa fa-angle-right"></i>
                </a>
            </div>
        </div><!--/recommended_items-->

    </div>


